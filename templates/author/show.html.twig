{% extends 'base.html.twig' %}

{% block title %}
    {{ 'author_details'|trans({'%id%': author.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'author_details'|trans({'%id%': author.id|default('')}) }}</h1>
    {% if author is defined and author|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ author.id }}</dd>
            <dt>{{ 'label_name'|trans }}</dt>
            <dd>{{ author.firstname }}</dd>
            <dt>{{ 'label_lastname'|trans }}</dt>
            <dd>{{ author.lastname }}</dd>
        </dl>
        <p>
            <a href="{{ url('author_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}