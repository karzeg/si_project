{% extends 'base.html.twig' %}

{% block title %}
    {{ 'author_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'author_list'|trans }}
        <div class="form-group row float-sm-right">
            <a href="{{ url('author_create') }}" class="btn btn-info">
                {{ 'action_create'|trans }}
            </a>
        </div>
    </h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'author.id') }}</th>#}
{#                <th>{{ knp_pagination_sortable(pagination, 'label_firstname'|trans, 'author.firstname') }}</th>#}
{#                <th>{{ knp_pagination_sortable(pagination, 'label_lastname'|trans, 'author.lastname') }}</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'author.name') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for author in pagination.items %}
                <tr>
{#                    <td>{{ author.id }}</td>#}
{#                    <td>{{ author.firstname }}</td>#}
{#                    <td>{{ author.lastname }}</td>#}
                    <td>{{ author.name }}</td>
                    <td>
                        <a href="{{ url('author_show', {id: author.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        <a href="{{ url('author_edit', {id: author.id}) }}" title="{{ 'action_edit'|trans }}">
                            {{ 'action_edit'|trans }}
                        </a>
                        {% if not author.books|length %}
                            <a href="{{ url('author_delete', {id: author.id}) }}" title="{{ 'action_delete'|trans }}">
                                {{ 'action_delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}