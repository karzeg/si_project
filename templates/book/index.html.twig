{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_book_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_book_list'|trans }}
        <div class="form-group row float-sm-right">
            <a href="{{ url('book_create') }}" class="btn btn-info">
                {{ 'action_create'|trans }}
            </a>
        </div>
    </h1>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'book.id') }}</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'book.title') }}</th>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_firstname'|trans, 'book.firstname') }}</th>#}
{#                <th>{{ knp_pagination_sortable(pagination, 'label_lastname'|trans, 'book.lastname') }}</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'book.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_category'|trans, 'book.category') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for book in pagination.items %}
                <tr>
{#                    <td>{{ book.id }}</td>#}
                    <td>{{ book.title }}</td>
{#                    <td>{{ book.author.firstname }}</td>#}
{#                    <td>{{ book.author.lastname }}</td>#}
                    <td>{{ book.author.name }}</td>
                    <td>{{ book.category.content }}</td>
                    <td>
                        <a href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                        <a href="{{ url('book_edit', {id: book.id}) }}" title="{{ 'action_edit'|trans }}">
                            {{ 'action_edit'|trans }}
                        </a>
                        <a href="{{ url('book_delete', {id: book.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}