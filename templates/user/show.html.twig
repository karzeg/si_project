{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label_firstname'|trans }}</dt>
            <dd>{{ user.user_data.firstname }}</dd>
            <dt>{{ 'label_lastname'|trans }}</dt>
            <dd>{{ user.user_data.lastname }}</dd>
        </dl>
        <p>
            <a href="{{ url('user-data_edit', {id: user.userdata.id}) }}" title="{{ 'user_edit'|trans }}" class="btn btn-info">
                {{ 'user_edit'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('change_password', {id: user.id}) }}" title="{{ 'change_password'|trans }}" class="btn btn-info">
                {{ 'change_password'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('task_index') }}" title="{{ 'action_back_to_list'|trans }}" class="btn btn-info">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}