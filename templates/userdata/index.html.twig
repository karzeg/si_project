{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user_data'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'user_data'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'userdata.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_firstname'|trans, 'userdata.firstname') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_lastname'|trans, 'userdata.lastname') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_email'|trans, 'userdata.email') }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for author in pagination.items %}
                <tr>
                    <td>{{ userdata.id }}</td>
                    <td>{{ userdata.firstname }}</td>
                    <td>{{ userdata.lastname }}</td>
                    <td>{{ userdata.email }}</td>
                    <td>
                        <a href="{{ url('author_show', {id: userdata.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}